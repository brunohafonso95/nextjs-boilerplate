{
  "extends": ["next", "prettier"],
  "env": {
    "jest": true,
    "node": true,
    "browser": true,
    "es2020": true
  },
  "plugins": [
    "prettier",
    "import-helpers"
  ],
  "rules": {
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "module",
          ["parent", "sibling", "index"]
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ]
  }
}
